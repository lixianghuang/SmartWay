<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ibtn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_title_pressed_selector"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/btn_arrow_left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="拖车信息查询"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_title_size" />

        <TextView
            android:id="@+id/tv_new_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="新建"
            android:textColor="@drawable/tv_white_lightblue_textcolor_selector"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tv_start_port_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="订舱号"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_cabin_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_selector"
            android:padding="3dp" />

        <TextView
            android:id="@+id/tv_invoice_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/tv_start_port_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="发票号"
            android:textColor="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_invoice_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_selector"
            android:padding="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/tv_start_port_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="装柜日期"
            android:textColor="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_selector"
            android:padding="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_factory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/tv_start_port_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="工厂名"
            android:textColor="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_factory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_selector"
            android:padding="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cabinet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/tv_start_port_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="柜号"
            android:textColor="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_cabinet_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_bg_selector"
            android:padding="3dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_blue_selector"
            android:padding="10dp"
            android:text="查询"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>