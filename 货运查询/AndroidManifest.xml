<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiazi.smartway"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.jiazi.smartway.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jiazi.smartway.FCLMsgActivity" />
        <activity android:name="com.jiazi.smartway.AirliftMsgActivity" />
        <activity android:name="com.jiazi.smartway.PriceQueryActivity" />
        <activity android:name="com.jiazi.smartway.LoginActivity" />
        <activity android:name="com.jiazi.smartway.TrailerQueryActivity" />
        <activity
            android:name="com.jiazi.smartway.ViewPagerActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.jiazi.smartway.TrailerEditActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name="com.jiazi.smartway.AboutActivity" />
        <activity android:name="com.jiazi.smartway.CargoTrackingActivity" />
        <activity android:name="com.jiazi.smartway.FileSelectActivity" />
        <activity android:name="com.jiazi.smartway.FileManagerActivity" />
        <activity android:name="com.jiazi.smartway.TrailerResultActivity" />
    </application>

</manifest>